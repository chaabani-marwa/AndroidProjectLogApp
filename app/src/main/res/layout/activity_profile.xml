<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".ProfileActivity">
    <TextView
        android:id="@+id/textView_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Utilisateur"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/textView_email_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Username :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView_welcome_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_email_value"
        app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/textView_email_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Admin@isetr.tn"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/textView_email_label"
        app:layout_constraintTop_toBottomOf="@id/textView_welcome_title" />
    <Button
        android:id="@+id/button_facebook"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:text="Profil FaceBook"
        android:backgroundTint="@color/design_default_color_primary"
        app:icon="@drawable/outline_add_link_24"
        app:layout_constraintTop_toBottomOf="@id/textView_email_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>
    <Button
        android:id="@+id/buttonSendMail"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Envoyer Mail "
        app:icon="@drawable/ic_mail"
        app:iconTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/button_facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/button_logout"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="DÃ©connexion"
        app:icon="@drawable/baseline_app_blocking_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSendMail" />
</androidx.constraintlayout.widget.ConstraintLayout>